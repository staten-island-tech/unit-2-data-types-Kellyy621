def find_factors(number):
    factors = []  # List to store factors
    
    # Loop through numbers from 1 to the number itself
    for i in range(1, number + 1):
        if number % i == 0:  # If the remainder is 0, i is a factor
            factors.append(i)
    
    return factors

# Example usage:
num = int(input("Enter a number: "))
print("Factors:", find_factors(num))